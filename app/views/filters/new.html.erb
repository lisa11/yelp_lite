<!-- Validation failure messages -->
<% if @filter.errors.any? %>
  <% @filter.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Filter</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_filter" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurants_id -->
      <div class="form-group">
        <label for="restaurants_id" class="control-label">
          Restaurants
        </label>

        <%= select_tag(:restaurants_id, options_from_collection_for_select(Restaurant.all, :id, :name, @filter.restaurants_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <%= select_tag(:tag_id, options_from_collection_for_select(Tag.all, :id, :created_at, @filter.tag_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Filter
      </button>
      or
      <a href="/filters">Cancel</a>
    </form>
  </div>
</div>
