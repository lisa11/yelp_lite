<!-- Validation failure messages -->
<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Response</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_response" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for reviews_id -->
      <div class="form-group">
        <label for="reviews_id" class="control-label">
          Reviews
        </label>

        <%= select_tag(:reviews_id, options_from_collection_for_select(Review.all, :id, :restaurants_id, @response.reviews_id), :class => "form-control") %>
      </div>

      <!-- Label and input for owners_id -->
      <div class="form-group">
        <label for="owners_id" class="control-label">
          Owners
        </label>

        <input type="text" id="owners_id" name="owners_id" placeholder="Owners" class="form-control" value="<%= @response.owners_id %>">
      </div>

      <button class="btn btn-success">
        Create Response
      </button>
      or
      <a href="/responses">Cancel</a>
    </form>
  </div>
</div>
