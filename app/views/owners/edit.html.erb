<!-- Validation failure messages -->
<% if @owner.errors.any? %>
  <% @owner.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Owner #<%= @owner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_owner/<%= @owner.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurants_id -->
      <div class="form-group">
        <label for="restaurants_id" class="control-label">
          Restaurants
        </label>

        <%= select_tag(:restaurants_id, options_from_collection_for_select(Restaurant.all, :id, :name, @owner.restaurants_id), :class => "form-control") %>
      </div>

      <!-- Label and input for accounts_id -->
      <div class="form-group">
        <label for="accounts_id" class="control-label">
          Accounts
        </label>

        <%= select_tag(:accounts_id, options_from_collection_for_select(Account.all, :id, :created_at, @owner.accounts_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Owner
      </button>
      or
      <a href="/owners/<%= @owner.id %>">Cancel</a>
    </form>
  </div>
</div>
