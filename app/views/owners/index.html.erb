<div class="page-header">
  <h1>
    Owners
    <a href="/owners/new" class="btn btn-lg btn-success">New Owner</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurants</th>
        <th>Accounts</th>
        <th>Actions</th>
      </tr>

      <% @owners.each do |owner| %>
      <tr>
        <td>
          <% if owner.restaurants.present? %>
            <a href="/restaurants/<%= owner.restaurants.id %>">
              <%= owner.restaurants.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if owner.accounts.present? %>
            <a href="/accounts/<%= owner.accounts.id %>">
              <%= owner.accounts.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/owners/<%= owner.id %>" class="btn btn-primary">Show</a>
          <a href="/owners/<%= owner.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_owner/<%= owner.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @owners, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
